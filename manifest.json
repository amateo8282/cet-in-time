{
  "manifest_version": 3,
  "name": "내 시간의 가격 (Time is Money)",
  "version": "1.0.0",
  "description": "쿠팡 상품 가격을 근로 시간으로 변환하여 표시합니다",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.coupang.com/*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ]
}
